        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lastAirDateTextView"
        app:layout_constraintTop_toBottomOf="@+id/lastAirDateTextView"
        tools:text="Description text goes here" />

    <ImageView
        android:id="@+id/mediaPosterImageView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/media_image_description"
